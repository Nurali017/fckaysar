{
  "name": "fc-kaisar-cms",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "seed": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/seed.ts",
    "sync:league-table": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/sync-league-table.ts",
    "sync:team-stats": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/sync-team-stats.ts",
    "sync:matches": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/sync-matches.ts",
    "sync:players": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/sync-players.ts",
    "sync:seasons": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/sync-seasons.ts",
    "migrate:photos": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/migrate-player-photos.ts",
    "migrate:team-logos": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/migrate-team-logos.ts",
    "set-hero": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/set-hero-player.ts",
    "check:kaisar-players": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/check-kaisar-players.ts",
    "analyze:players": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/analyze-players.ts",
    "clear:players": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/clear-all-players.ts",
    "clear:players-no-photos": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/clear-players-without-photos.ts",
    "test:sota-lineups": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/test-sota-lineups.ts",
    "cleanup:old-players": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/cleanup-old-players.ts",
    "fill:translations": "cross-env NODE_OPTIONS=--no-deprecation tsx src/scripts/fill-missing-translations.ts",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@payloadcms/db-mongodb": "3.65.0",
    "@payloadcms/next": "3.65.0",
    "@payloadcms/richtext-lexical": "3.65.0",
    "@payloadcms/ui": "3.65.0",
    "axios": "^1.13.2",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "libretranslate": "^1.0.1",
    "next": "15.4.7",
    "next-intl": "^4.5.7",
    "node-cron": "^4.2.1",
    "payload": "3.65.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/node-cron": "^3.0.11",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.7",
    "jsdom": "26.1.0",
    "playwright": "1.56.1",
    "playwright-core": "1.56.1",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
